<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hp.ex2.MainActivity">

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e6ddc3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="200dp"
            android:src="@drawable/toshl_6_signup" />
        <TextView
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Who are You?"/>
        <EditText
            android:layout_marginTop="5dp"
            android:hint="@string/name"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_bold_corner"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <EditText
            android:layout_marginTop="10dp"
            android:hint="@string/email"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_solid_black"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:paddingLeft="5dp"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose a Password"/>
        <EditText
            android:layout_marginTop="10dp"
            android:hint="@string/pass_hint"
            android:textSize="20dp"
            android:paddingLeft="10dp"

            android:background="@drawable/rounded_solid_black"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <Button
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_solid_red"
            android:text="@string/signup"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAlignment="viewEnd"
                android:paddingRight="5dp"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:text="@string/agree1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" />

            <TextView
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginTop="20dp"
                android:text="@string/agree2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>
</LinearLayout>
